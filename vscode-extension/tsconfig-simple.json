{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/extension-simple.ts",
    "src/previewProvider-simple.ts",
    "src/simpleValidator.ts",
    "src/languageServer.ts"
  ],
  "exclude": ["node_modules", ".vscode-test"]
}